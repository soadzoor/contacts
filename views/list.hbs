<h1>List</h1>
<div class="panel">
  <form method="get" action="/list" >
    <div class="form-group">
      <div class="col-lg-6 col-lg-offset-2">
        <input type="text" class="form-control" 
               name="query" id="search" 
               {{#if query}}
               value="{{query}}"
               {{/if}}
               placeholder="Search by name...">
      </div>
      <div class="col-lg-2">
        <input type="submit" class="btn btn-primary" value="Search">
      </div>
    </div>
  </form>
</div>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Provider</th>
    </tr>
  </thead>
  <tbody>
    {{#each data as |ember|}}
    <tr>
      <td>{{ember.name}}</td>
      <td>{{ember.phone}}</td>
      <td>{{ember.email}}</td>
      <td>{{ember.provider}}</td>
      <td>
        <a href="/edit/{{ember.id}}">Edit</a>
      </td>
      <td>
        <a href="/delete/{{ember.id}}">Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table> 